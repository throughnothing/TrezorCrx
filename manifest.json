{

  "name": "TrezorHID",
  "description": "Chrome App to use Trezor Hardware Wallet",
  "version": "0.0.1",

  "manifest_version": 2,
  "minimum_chrome_version": "38.0.2125.7",

  "icons": {
    "16": "build/assets/icon_16.png",
    "128": "build/assets/icon_128.png"
  },

  "app": {
    "background": {
      "scripts": ["js/background.js"]
    }
  },

  "permissions": [
    "hid",
    {
      "usbDevices": [
        { "vendorId": 21324, "productId": 1 }
       ]
    }
  ]
}
